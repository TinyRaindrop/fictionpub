{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build PyInstaller Spec",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\pyinstaller.exe",
            "args": [
                "${workspaceFolder}\\fictionpub.spec"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}